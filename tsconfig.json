{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"declarationDir": "./dist"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
